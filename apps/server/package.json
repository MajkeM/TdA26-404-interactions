{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"db": "docker compose -f docker-compose.yaml up -d",
		"db:down": "docker compose -f docker-compose.yaml down",
		"db:push": "prisma db push",
		"db:seed": "node prisma/seed.js",
		"db:sync": "npm run db:push && npm run db:seed",
		"prepare": "prisma generate"
	},
	"dependencies": {
		"@prisma/client": "^5.18.0",
		"dotenv": "^17.2.1",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-session": "^1.18.1",
		"method-override": "^3.0.0"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.5",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2",
		"@types/express": "^5.0.1",
		"@types/express-session": "^1.18.1",
		"@types/method-override": "^0.0.32",
		"@types/node": "^22.13.11",
		"prisma": "^5.18.0",
		"tsx": "^4.19.2"
	}
}
