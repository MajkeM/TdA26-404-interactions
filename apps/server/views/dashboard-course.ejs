    .btn-sm { padding: 0.4rem 0.8rem; font-size: 0.875rem; }
    .materials-list { list-style: none; }
    .material-item { display: flex; align-items: center; padding: 1rem; background: #f8f9fa; border-radius: 8px; margin-bottom: 0.75rem; flex-wrap: wrap; gap: 0.5rem; }
    .material-icon { width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: #667eea; color: white; border-radius: 8px; font-size: 1.2rem; flex-shrink: 0; }
