<body>
  <nav class="navbar">
    <span class="logo">Think different Academy</span>
    <div>
      <a href="/">Dom≈Ø</a>
      <a href="/courses">Kurzy</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Odhl√°sit (<%= user.username %>)</a>
    </div>
  </nav>
  
  <div class="container">
    <a href="/dashboard" class="back-link">‚Üê Zpƒõt na dashboard</a>
    
    <h1><%= course.name %></h1>
    <p class="subtitle">Spr√°va kurzu a materi√°l≈Ø</p>
    
    <div class="card">
      <h2>P≈ôidat nov√Ω materi√°l</h2>
      
      <form method="POST" action="/dashboard/courses/<%= course.uuid %>/materials" enctype="multipart/form-data" id="materialForm">
        <div class="form-row">
          <div class="form-group">
            <label for="name">N√°zev materi√°lu *</label>
            <input type="text" id="name" name="name" required>
          </div>
          <div class="form-group">
            <label for="description">Kr√°tk√Ω popis</label>
            <input type="text" id="description" name="description">
          </div>
        </div>
        
        <div class="form-group">
          <label>Typ materi√°lu *</label>
          <div class="type-selector">
            <label>
              <input type="radio" name="type" value="file" checked onchange="toggleType('file')">
              <span>üìÑ Soubor</span>
            </label>
            <label>
              <input type="radio" name="type" value="url" onchange="toggleType('url')">
              <span>üîó Odkaz</span>
            </label>
          </div>
        </div>
        
        <div id="fileFields" class="file-fields active">
          <div class="form-group">
            <label for="file">Vybrat soubor *</label>
            <input type="file" id="file" name="file" accept=".pdf,.docx,.txt,.png,.jpg,.jpeg,.gif,.mp4,.mp3">
            <small style="color: #888; display: block; margin-top: 0.5rem;">
              Povolen√© form√°ty: PDF, DOCX, TXT, PNG, JPG, GIF, MP4, MP3. Max. velikost: 30 MB.
            </small>
          </div>
        </div>
        
        <div id="linkFields" class="link-fields">
          <div class="form-group">
            <label for="url">URL adresa *</label>
            <input type="url" id="url" name="url" placeholder="https://...">
          </div>
        </div>
        
        <button type="submit" class="btn">P≈ôidat materi√°l</button>
      </form>
    </div>
    
    <div class="card">
      <h2>Seznam materi√°l≈Ø (<%= materials.length %>)</h2>
      
      <% if (materials.length > 0) { %>
        <ul class="materials-list">
          <% materials.forEach(material => { %>
            <li class="material-item">
              <div class="material-icon <%= material.type === 'url' ? 'link' : '' %>">
                <% if (material.type === 'file') { %>üìÑ<% } else { %>üîó<% } %>
              </div>
              <div class="material-info">
                <div class="material-name"><%= material.name %></div>
                <% if (material.description) { %>
                  <div class="material-desc"><%= material.description %></div>
                <% } %>
                <div class="material-meta">
                  <% if (material.type === 'file') { %>
                    <%= material.file_name %> (<%= Math.round(material.file_size / 1024) %> KB)
                  <% } else { %>
                    <a href="<%= material.url %>" target="_blank"><%= material.url %></a>
                  <% } %>
                </div>
              </div>
              <div class="material-actions">
                <% if (material.type === 'file') { %>
                  <a href="/uploads/<%= require('path').basename(material.file_path) %>" class="btn btn-secondary btn-sm" download>St√°hnout</a>
                <% } else { %>
                  <a href="<%= material.url %>" class="btn btn-secondary btn-sm" target="_blank">Otev≈ô√≠t</a>
                <% } %>
                <button type="button" class="btn btn-sm" onclick="toggleEditMaterial('<%= material.uuid %>')">Upravit</button>
                <form method="POST" action="/dashboard/courses/<%= course.uuid %>/materials/<%= material.uuid %>/delete" onsubmit="return confirm('Opravdu smazat tento materi√°l?');">
                  <button type="submit" class="btn btn-danger btn-sm">Smazat</button>
                </form>
              </div>
              
              <div id="edit-<%= material.uuid %>" class="edit-form">
                <form method="POST" action="/dashboard/courses/<%= course.uuid %>/materials/<%= material.uuid %>/edit">
                  <div class="form-row">
                    <div class="form-group">
                      <label>N√°zev</label>
                      <input type="text" name="name" value="<%= material.name %>" required>
                    </div>
                    <div class="form-group">
                      <label>Popis</label>
                      <input type="text" name="description" value="<%= material.description || '' %>">
                    </div>
                  </div>
                  <% if (material.type === 'url') { %>
                    <div class="form-group">
                      <label>URL</label>
                      <input type="url" name="url" value="<%= material.url %>">
                    </div>
                  <% } %>
                  <button type="submit" class="btn btn-sm">Ulo≈æit</button>
                  <button type="button" class="btn btn-secondary btn-sm" onclick="toggleEditMaterial('<%= material.uuid %>')">Zru≈°it</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="empty">Tento kurz zat√≠m nem√° ≈æ√°dn√© materi√°ly.</p>
      <% } %>
    </div>
    
    <!-- Quizzes Section -->
    <div class="card">
      <h2>Spr√°va kv√≠z≈Ø</h2>
      <button class="btn btn-warning" onclick="openQuizModal()">+ P≈ôidat nov√Ω kv√≠z</button>
      
      <div style="margin-top: 1rem;">
        <div id="quizzesList" class="quiz-list"></div>
      </div>
    </div>
  </div>
  
  <!-- Quiz Modal -->
  <div id="quizModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="quizModalTitle">Nov√Ω kv√≠z</h2>
        <button class="close-btn" onclick="closeQuizModal()">&times;</button>
      </div>
      <form id="quizForm" onsubmit="saveQuiz(event)">
        <input type="hidden" id="editQuizUuid" value="">
        <div class="form-group" style="margin-bottom: 1rem;">
          <label for="quizTitle">N√°zev kv√≠zu *</label>
          <input type="text" id="quizTitle" required>
        </div>
        
        <h3 style="margin-bottom: 1rem;">Ot√°zky</h3>
        <div id="questionsContainer"></div>
        <button type="button" class="btn btn-secondary" onclick="addQuestion()">+ P≈ôidat ot√°zku</button>
        
        <div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
          <button type="submit" class="btn">Ulo≈æit kv√≠z</button>
          <button type="button" class="btn btn-secondary" onclick="closeQuizModal()">Zru≈°it</button>
        </div>
      </form>
    </div>
  </div>
  
  <!-- Results Modal -->
  <div id="resultsModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2>V√Ωsledky kv√≠zu</h2>
        <button class="close-btn" onclick="closeResultsModal()">&times;</button>
      </div>
      <div id="resultsContent" class="results-list"></div>
    </div>
  </div>
  
  <script>
    const courseUuid = '<%= course.uuid %>';
    let questionCounter = 0;
    
    // Load quizzes on page load
    document.addEventListener('DOMContentLoaded', loadQuizzes);
    
    async function loadQuizzes() {
      try {
        const response = await fetch(`/api/courses/${courseUuid}/quizzes`);
        const quizzes = await response.json();
        renderQuizzesList(quizzes);
      } catch (error) {
        console.error('Error loading quizzes:', error);
      }
    }
    
    function renderQuizzesList(quizzes) {
      const container = document.getElementById('quizzesList');
      
      if (quizzes.length === 0) {
        container.innerHTML = '<p class="empty">Tento kurz zat√≠m nem√° ≈æ√°dn√© kv√≠zy.</p>';
        return;
      }
      
      container.innerHTML = quizzes.map(quiz => `
        <div class="quiz-item">
          <div class="quiz-header">
            <div class="quiz-icon">üìù</div>
            <div class="quiz-info">
              <div class="quiz-name">${quiz.title}</div>
              <div class="quiz-meta">${quiz.questions.length} ot√°zek ‚Ä¢ Vyplnƒõno ${quiz.completionCount}√ó</div>
            </div>
            <div class="quiz-actions">
              <button class="btn btn-sm" onclick="editQuiz('${quiz.uuid}')">Upravit</button>
              <button class="btn btn-secondary btn-sm" onclick="viewResults('${quiz.uuid}')">V√Ωsledky</button>
              <button class="btn btn-danger btn-sm" onclick="deleteQuiz('${quiz.uuid}')">Smazat</button>
            </div>
          </div>
          ${quiz.questions.length > 0 ? `
            <div style="margin-top: 0.5rem; margin-left: 3.5rem;">
              ${quiz.questions.slice(0, 3).map((q, i) => `
                <div class="question-item">
                  <div class="question-header">
                    <strong>${i + 1}. ${q.question}</strong>
                    <span style="font-size: 0.8rem; color: #888;">${q.type === 'singleChoice' ? 'Jedna odpovƒõƒè' : 'V√≠ce odpovƒõd√≠'}</span>
                  </div>
                  <div class="answers-container">
                    ${q.options.map((opt, idx) => `
                      <div class="answer-item ${q.type === 'singleChoice' ? (idx === q.correctIndex ? 'correct' : '') : (q.correctIndices?.includes(idx) ? 'correct' : '')}">
                        ${q.type === 'singleChoice' ? (idx === q.correctIndex ? '‚úì' : '‚óã') : (q.correctIndices?.includes(idx) ? '‚úì' : '‚óã')} ${opt}
                      </div>
                    `).join('')}
                  </div>
                </div>
              `).join('')}
              ${quiz.questions.length > 3 ? `<p style="color: #888; font-style: italic;">... a dal≈°√≠ ${quiz.questions.length - 3} ot√°zek</p>` : ''}
            </div>
          ` : ''}
        </div>
      `).join('');
    }
    
    function openQuizModal() {
      document.getElementById('editQuizUuid').value = '';
      document.getElementById('quizModalTitle').textContent = 'Nov√Ω kv√≠z';
      document.getElementById('quizTitle').value = '';
      document.getElementById('questionsContainer').innerHTML = '';
      questionCounter = 0;
      addQuestion();
      document.getElementById('quizModal').classList.add('active');
    }
    
    function closeQuizModal() {
      document.getElementById('quizModal').classList.remove('active');
    }
    
    async function editQuiz(quizUuid) {
      try {
        const response = await fetch(`/api/courses/${courseUuid}/quizzes/${quizUuid}`);
        const quiz = await response.json();
        
        document.getElementById('editQuizUuid').value = quiz.uuid;
        document.getElementById('quizModalTitle').textContent = 'Upravit kv√≠z';
        document.getElementById('quizTitle').value = quiz.title;
        document.getElementById('questionsContainer').innerHTML = '';
        questionCounter = 0;
        
        quiz.questions.forEach(q => {
          addQuestion(q);
        });
        
        if (quiz.questions.length === 0) {
          addQuestion();
        }
        
        document.getElementById('quizModal').classList.add('active');
      } catch (error) {
        console.error('Error loading quiz:', error);
        alert('Nepoda≈ôilo se naƒç√≠st kv√≠z');
      }
    }
    
    function addQuestion(existingQuestion = null) {
      const container = document.getElementById('questionsContainer');
      const qIndex = questionCounter++;
      
      const div = document.createElement('div');
      div.className = 'question-form';
      div.id = `question-${qIndex}`;
      div.innerHTML = `
        <div class="form-row">
          <div class="form-group" style="flex: 2;">
            <label>Text ot√°zky *</label>
            <input type="text" class="question-text" value="${existingQuestion ? existingQuestion.question : ''}" required>
          </div>
          <div class="form-group" style="flex: 1;">
            <label>Typ</label>
            <select class="question-type">
              <option value="singleChoice" ${existingQuestion?.type === 'singleChoice' ? 'selected' : ''}>Jedna odpovƒõƒè</option>
              <option value="multipleChoice" ${existingQuestion?.type === 'multipleChoice' ? 'selected' : ''}>V√≠ce odpovƒõd√≠</option>
            </select>
          </div>
          <button type="button" class="btn btn-danger btn-sm" onclick="removeQuestion(${qIndex})" style="align-self: flex-end;">√ó</button>
        </div>
        <div class="answers-container" id="answers-${qIndex}">
          <label>Odpovƒõdi (oznaƒçte spr√°vn√©):</label>
        </div>
        <button type="button" class="btn btn-secondary btn-sm" onclick="addAnswer(${qIndex})" style="margin-top: 0.5rem;">+ P≈ôidat odpovƒõƒè</button>
      `;
      container.appendChild(div);
      
      if (existingQuestion && existingQuestion.options) {
        existingQuestion.options.forEach((opt, idx) => {
          const isCorrect = existingQuestion.type === 'singleChoice' 
            ? idx === existingQuestion.correctIndex 
            : existingQuestion.correctIndices?.includes(idx);
          addAnswer(qIndex, { text: opt, isCorrect });
        });
      } else {
        addAnswer(qIndex);
        addAnswer(qIndex);
      }
    }
    
    function removeQuestion(qIndex) {
      const el = document.getElementById(`question-${qIndex}`);
      if (el) el.remove();
    }
    
    let answerCounters = {};
    function addAnswer(qIndex, existingAnswer = null) {
      if (!answerCounters[qIndex]) answerCounters[qIndex] = 0;
      const aIndex = answerCounters[qIndex]++;
      
      const container = document.getElementById(`answers-${qIndex}`);
      const div = document.createElement('div');
      div.className = 'answer-row';
      div.id = `answer-${qIndex}-${aIndex}`;
      div.innerHTML = `
        <input type="checkbox" class="answer-correct" ${existingAnswer?.isCorrect ? 'checked' : ''}>
        <input type="text" class="answer-text" value="${existingAnswer ? existingAnswer.text : ''}" placeholder="Text odpovƒõdi" required>
        <button type="button" class="btn btn-danger btn-sm" onclick="removeAnswer(${qIndex}, ${aIndex})">√ó</button>
      `;
      container.appendChild(div);
    }
    
    function removeAnswer(qIndex, aIndex) {
      const el = document.getElementById(`answer-${qIndex}-${aIndex}`);
      if (el) el.remove();
    }
    
    async function saveQuiz(e) {
      e.preventDefault();
      
      const quizUuid = document.getElementById('editQuizUuid').value;
      const title = document.getElementById('quizTitle').value;
      
      const questions = [];
      document.querySelectorAll('.question-form').forEach(qForm => {
        const questionText = qForm.querySelector('.question-text').value;
        const type = qForm.querySelector('.question-type').value;
        const options = [];
        const correctIndices = [];
        let correctIndex = null;
        
        let idx = 0;
        qForm.querySelectorAll('.answer-row').forEach(aRow => {
          const aText = aRow.querySelector('.answer-text').value;
          const isCorrect = aRow.querySelector('.answer-correct').checked;
          if (aText) {
            options.push(aText);
            if (isCorrect) {
              if (type === 'singleChoice' && correctIndex === null) {
                correctIndex = idx;
              } else {
                correctIndices.push(idx);
              }
            }
            idx++;
          }
        });
        
        if (questionText && options.length > 0) {
          const q = { question: questionText, type, options };
          if (type === 'singleChoice') {
            q.correctIndex = correctIndex !== null ? correctIndex : 0;
          } else {
            q.correctIndices = correctIndices;
          }
          questions.push(q);
        }
      });
      
      const data = { title, questions };
      
      try {
        const url = quizUuid 
          ? `/api/courses/${courseUuid}/quizzes/${quizUuid}`
          : `/api/courses/${courseUuid}/quizzes`;
        
        const response = await fetch(url, {
          method: quizUuid ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        if (response.ok) {
          closeQuizModal();
          loadQuizzes();
        } else {
          const error = await response.json();
          alert(error.error || 'Nepoda≈ôilo se ulo≈æit kv√≠z');
        }
      } catch (error) {
        console.error('Error saving quiz:', error);
        alert('Nepoda≈ôilo se ulo≈æit kv√≠z');
      }
    }
    
    async function deleteQuiz(quizUuid) {
      if (!confirm('Opravdu smazat tento kv√≠z? Budou smaz√°ny i v≈°echny v√Ωsledky.')) return;
      
      try {
        const response = await fetch(`/api/courses/${courseUuid}/quizzes/${quizUuid}`, {
          method: 'DELETE'
        });
        
        if (response.ok) {
          loadQuizzes();
        } else {
          alert('Nepoda≈ôilo se smazat kv√≠z');
        }
      } catch (error) {
        console.error('Error deleting quiz:', error);
        alert('Nepoda≈ôilo se smazat kv√≠z');
      }
    }
    
    async function viewResults(quizUuid) {
      try {
        const response = await fetch(`/api/courses/${courseUuid}/quizzes/${quizUuid}/results`);
        
        if (response.status === 401) {
          alert('Pro zobrazen√≠ v√Ωsledk≈Ø mus√≠te b√Ωt p≈ôihl√°≈°eni');
          return;
        }
        
        const results = await response.json();
        
        const container = document.getElementById('resultsContent');
        
        if (results.length === 0) {
          container.innerHTML = '<p class="empty">Tento kv√≠z zat√≠m nikdo nevyplnil.</p>';
        } else {
          container.innerHTML = results.map((r, i) => `
            <div class="result-row">
              <span>#${i + 1}</span>
              <span><strong>${r.score} / ${r.maxScore}</strong> (${r.percentage}%)</span>
              <span style="color: #888; font-size: 0.9rem;">${new Date(r.createdAt).toLocaleString('cs')}</span>
            </div>
          `).join('');
        }
        
        document.getElementById('resultsModal').classList.add('active');
      } catch (error) {
        console.error('Error loading results:', error);
        alert('Nepoda≈ôilo se naƒç√≠st v√Ωsledky');
      }
    }
    
    function closeResultsModal() {
      document.getElementById('resultsModal').classList.remove('active');
    }
    
    // Close modals when clicking outside
    document.getElementById('quizModal').addEventListener('click', function(e) {
      if (e.target === this) closeQuizModal();
    });
    document.getElementById('resultsModal').addEventListener('click', function(e) {
      if (e.target === this) closeResultsModal();
    });
    
    function toggleType(type) {
      document.getElementById('fileFields').classList.toggle('active', type === 'file');
      document.getElementById('linkFields').classList.toggle('active', type === 'url');
      document.getElementById('file').required = (type === 'file');
      document.getElementById('url').required = (type === 'url');
    }
    
    function toggleEditMaterial(uuid) {
      document.getElementById('edit-' + uuid).classList.toggle('active');
    }
  </script>
