    .edit-form { display: none; background: #fff; padding: 1rem; border: 1px solid #ddd; border-radius: 5px; margin-top: 0.5rem; width: 100%; }
    .edit-form.active { display: block; }
    .empty { color: #888; font-style: italic; padding: 1rem; text-align: center; }
    .alert { padding: 1rem; border-radius: 5px; margin-bottom: 1rem; }
    .alert-info { background: #e7f3ff; color: #0056b3; }
    .quiz-list { list-style: none; }
    .quiz-item { padding: 1rem; background: #f8f9fa; border-radius: 8px; margin-bottom: 0.75rem; }
    .quiz-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem; flex-wrap: wrap; }
    .quiz-icon { width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; background: #ffc107; color: white; border-radius: 8px; font-size: 1.2rem; flex-shrink: 0; }
    .quiz-info { flex: 1; min-width: 200px; }
    .quiz-name { font-weight: 600; color: #333; }
    .quiz-desc { font-size: 0.9rem; color: #666; }
    .quiz-meta { font-size: 0.8rem; color: #888; margin-top: 0.25rem; }
    .quiz-actions { display: flex; gap: 0.5rem; flex-wrap: wrap; }
    .question-item { background: #fff; padding: 1rem; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 0.5rem; }
    .question-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem; }
    .answer-item { padding: 0.25rem 0.5rem; margin: 0.25rem 0; font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem; }
    .answer-item.correct { color: #28a745; font-weight: 500; }
    .btn-warning { background: #ffc107; color: #333; }
    .btn-warning:hover { background: #e0a800; }
    .modal { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; overflow-y: auto; }
    .modal.active { display: flex; justify-content: center; align-items: flex-start; padding: 2rem; }
    .modal-content { background: white; border-radius: 10px; padding: 2rem; max-width: 800px; width: 100%; margin: 2rem 0; }
    .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; }
    .modal-header h2 { font-size: 1.5rem; color: #333; }
    .close-btn { background: none; border: none; font-size: 1.5rem; cursor: pointer; color: #888; }
    .close-btn:hover { color: #333; }
    .question-form { margin-bottom: 1rem; padding: 1rem; background: #f8f9fa; border-radius: 5px; }
    .answers-container { margin-left: 1rem; }
    .answer-row { display: flex; gap: 0.5rem; align-items: center; margin-bottom: 0.5rem; }
    .answer-row input[type="text"] { flex: 1; }
    .results-list { max-height: 400px; overflow-y: auto; }
    .result-row { display: flex; justify-content: space-between; padding: 0.75rem; background: #f8f9fa; border-radius: 5px; margin-bottom: 0.5rem; }
  </style>
